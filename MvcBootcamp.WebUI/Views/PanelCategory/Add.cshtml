@model  MvcBootcamp.Entities.Concrete.Category

@{
    ViewBag.Title = "Mvc Bootcamp V.1.1";
    Layout = "~/Views/Shared/_PanelLayout.cshtml";
}

<div style="margin:20px 300px 0 300px;">

    @using (Html.BeginForm("Add", "PanelCategory", FormMethod.Post))
    {
        @Html.AntiForgeryToken();

        @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @style = "margin-top:10px;", @placeholder = "Kategori Adı" });
        @Html.ValidationMessageFor(x => x.Name, null, new { @class = "text-danger" });

        @Html.TextAreaFor(x => x.Description, new { @class = "form-control", @style = "margin-top:10px;height:100px;", @placeholder = "Açıklama" });
        @Html.ValidationMessageFor(x => x.Description, null, new { @class = "text-danger" });

        @Html.HiddenFor(x => x.Status, new { @class = "form-control", @Value="True"});


        <button style="margin-top:20px;" class="btn btn-success">Ekle</button>
    }
</div>

