@model  MvcBootcamp.Entities.Concrete.Category

@{
    ViewBag.Title = "Mvc Bootcamp V.1.1";
    Layout = "~/Views/Shared/_PanelLayout.cshtml";
}

<div class="row mt">
    <div class="col-md-12">
        <div class="page-content">
            @using (Html.BeginForm("Add", "PanelCategory", FormMethod.Post))
            {
                <div class="page-content-header">

                    <i class="fa fa-list icon-margin"></i> <span>KATEGORİ EKLE</span>
                    <button class="btn btn-success btn-xs" style="float:right;margin-top:0;border:1px solid #d3d3d3;"><i class="fa fa-save"></i> Kaydet</button>
                </div>
                <div style="clear:both;"></div>
                <div class="content-panel" style="padding:10px 10px 10px 10px;">

                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        <label>Kategori Adı</label>
                        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.Name, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label>Açıklama</label>
                        @Html.TextAreaFor(x => x.Description, new { @class = "form-control", @id = "Description", @style = "height:100px;resize:none", @Maxlength = "100" })
                        @Html.ValidationMessageFor(x => x.Description, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label>Sıra</label>
                        @Html.TextBoxFor(x => x.Sorting, new { @class = "form-control", @Value = 99 })
                    </div>
                    <div class="form-group">
                        <label>Durum</label>
                        @Html.DropDownListFor(x => x.IsActive, new List<SelectListItem> {
                             new SelectListItem {
                                Text="Aktif",
                                Value="true",
                               // Selected = true, seçili olarak gelsin
                                // Disabled = true  disable olarak gelsin istersek kullanıyoruz
                             },
                             new SelectListItem {
                                Text="Pasif",
                                Value="false",
                             }}, "--Seçiniz--", new { @class = "form-control", @style = "margin-top:10px;" })

                    </div>

                </div>
            }
        </div>

    </div>
</div>

