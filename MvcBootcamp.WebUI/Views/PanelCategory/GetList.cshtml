@using MvcBootcamp.Entities.Concrete
@model List<Category>

@{
    ViewBag.Title = "Mvc Bootcamp V.1.1";
    Layout = "~/Views/Shared/_PanelLayout.cshtml";
}



<div class="row mt">
    <div class="col-md-12">
        <div class="page-content">
        <div class="page-content-header">
           <i class="fa fa-list icon-margin"></i> <span>KATEGORİLER</span>
        </div>
            <div class="content-panel" style="padding: 10px 10px 10px 10px;">
                <table class="table table-striped table-advance table-hover table-bordered ">
                    <div style="width:100%;background:white;padding:10px 0 10px 0;margin-bottom:5px;border-radius:3px;">
                        <a href="/PanelCategory/Add" class="btn btn-primary" style="float:right;"><i class="fa fa-plus icon-margin"></i> Yeni Kategori</a>
                        <button class="btn-pdf"><i class="fa fa-file-pdf-o icon-margin" style="color:#d9534f;"></i> Pdf</button>
                        <button class="btn-excel"><i class="fa fa-file-excel-o icon-margin" style="color:#5cb85c;"></i> Excel</button>
                        <button class="btn-print"><i class="fa fa-print icon-margin"></i> Yazdır</button>
                        <button id="RemoveSelected" class="btn btn-danger btn-remove-selected"><i class="fa fa-trash-o icon-margin"></i> Seçilenleri Sil</button>

                        <div class="fast-filter">
                            <input type="text" placeholder="Hızlı Filtreleme" />
                            <button type="submit">Ara</button>
                        </div>


                        <div class="clear"></div>
                    </div>
                    <thead class="table-thead">
                        <tr>
                            <th width="20px"><input type="checkbox" id="SelectAll" style="cursor:pointer;" /></th>
                            <th  width="120px">Kategori Kodu</th>
                            <th>Kategori Adı</th>
                            <th class="hidden-phone">Açıklama</th>
                            <th width="50">Sıra</th>
                            <th width="100">Başlıklar</th>
                            <th width="100px">Durum</th>
                            <th width="120px">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><input type="checkbox" class="SelectItem" style="cursor:pointer;" value="@item.Id" /></td>
                                <th>@item.Id</th>
                                <td>@item.Name</td>
                                <td class="hidden-phone">@item.Description</td>
                                <td align="center">10</td>
                                <td align="center"><button class="btn btn-primary btn-xs">Başlıklar (20)</button></td>
                                <td align="center">
                                    @if (item.Status == true)
                                    {
                                        <button id="@item.Id" class="btn-active btnStatus">Aktif</button>
                                    }
                                    else
                                    {
                                        <button id="@item.Id" class="btn-passive btnStatus">Pasif</button>
                                    }
                                </td>
                                <td align="center">
                                    <a href="/PanelCategory/Update/@item.Id" class="btn btn-primary btn-xs"><i class="fa fa-edit" style="margin-right:3px;"></i>Düzenle</a>
                                    <button class="btn btn-danger btn-xs btnRemove" name="@item.Id"><i class="fa fa-trash-o"></i></button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div><!-- /content-panel -->
        </div><!-- /page-content -->
    </div><!-- /col-md-12 -->
</div><!-- /row -->



@section SweetAlert{

    <link href="~/Content/css/sweet-alert/sweet-alert.css" rel="stylesheet" />
}

@section OperationScripts{

    <script src="~/Scripts/sweetalert/sweetalert.min.js"></script>
    <script src="~/Scripts/web-operation/web-operation.js"></script>
}