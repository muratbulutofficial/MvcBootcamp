@using MvcBootcamp.Entities.Concrete
@model List<Category>

@{
    ViewBag.Title = "Mvc Bootcamp V.1.1";
    Layout = "~/Views/Shared/_PanelLayout.cshtml";
}

<div class="row mt">
    <div class="col-md-12">
        <div class="content-panel" style="padding:10px 10px 10px 10px;">
            <table class="table table-striped table-advance table-hover table-bordered ">
                <div style="width:100%;height:auto;background:white;padding:10px 0 10px 0;margin-bottom:3px;border-radius:3px;">
                    <a href="/PanelCategory/Add" class="btn btn-primary" style="float:right;"><i class="fa fa-plus"></i> Yeni Kategori</a>
                    <button class="btn btn-success" style="float:right;margin-right:10px;background:none;color:#797979;border-color:#d3d3d3;"><i class="fa fa-file-pdf-o" style="color:#d9534f;"></i> Pdf</button>
                    <button class="btn btn-success" style=" float: right; margin-right: 10px; background: none; color: #797979;border-color:#d3d3d3;"><i class="fa fa-file-excel-o " style="color:#5cb85c;"></i> Excel</button>
                    <button class="btn btn-success" style="float:right;margin-right:10px;background:none;color:#797979;border-color:#d3d3d3;"><i class="fa fa-print" style="color:black;"></i> Yazdır</button>

                    <div class="clear"></div>
                    <hr style="border:1px solid #d3d3d3;" />
                </div>
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Kategori Adı</th>
                        <th>Açıklama</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th>@item.Id</th>
                            <td>@item.Name</td>
                            <td>@item.Description </td>
                            <td align="center">
                                @if (item.Status == true)
                                {
                                    <button class="btn-active">Aktif</button>
                                }
                                else
                                {
                                    <button class="btn-passive">Pasif</button>
                                }
                            </td>
                            <td align="center" width="220px">
                                <a href="#" class="btn btn-warning btn-xs"><i class="fa fa-copy"></i> Kopyala</a>
                                <a href="#" class="btn btn-primary btn-xs"><i class="fa fa-pencil" style="margin-right:3px;"></i>Düzenle</a>
                                <a href="#" class="btn btn-danger btn-xs"><i class="fa fa-trash-o" style="margin-right:3px;"></i>Sil</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div><!-- /content-panel -->
    </div><!-- /col-md-12 -->
</div><!-- /row -->


