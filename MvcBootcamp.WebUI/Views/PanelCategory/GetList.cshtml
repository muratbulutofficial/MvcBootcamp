@using MvcBootcamp.Entities.Concrete
@model List<Category>

@{
    ViewBag.Title = "Mvc Bootcamp V.1.1";
    Layout = "~/Views/Shared/_PanelLayout.cshtml";
}






    <div class="row mt">
        <div class="col-md-12">
            <div class="content-panel" style="padding:0 10px 10px 10px;">
                <table class="table table-striped table-advance table-hover table-bordered ">
                    <div style="width:100%;height:auto;background:white;padding:10px 0 10px 0;margin-bottom:3px;border-radius:3px;">

                        <div style="float:left;">

                        </div>
                        <a href="/PanelCategory/Add" class="btn btn-primary" style="float:right;"><i class="fa fa-plus"></i> Yeni Kategori</a>
                        <div style="clear:both;"></div>
                    </div>
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Kategori Adı</th>
                            <th>Açıklama</th>
                            <th>Durum</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th>@item.Id</th>
                                <td>@item.Name</td>
                                <td>@item.Description </td>
                                <td align="center">
                                    @if (item.Status == true)
                                    {
                                        <button class="btn-active">Aktif</button>
                                    }
                                    else
                                    {
                                        <button class="btn-passive">Pasif</button>
                                    }
                                </td>
                                <td align="center" width="220px">
                                    <a href="#" class="btn btn-warning btn-xs"><i class="fa fa-copy"></i> Kopyala</a>
                                    <a href="#" class="btn btn-primary btn-xs"><i class="fa fa-pencil" style="margin-right:3px;"></i>Düzenle</a>
                                    <a href="#" class="btn btn-danger btn-xs"><i class="fa fa-trash-o" style="margin-right:3px;"></i>Sil</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div><!-- /content-panel -->
        </div><!-- /col-md-12 -->
    </div><!-- /row -->


