@using MvcBootcamp.Entities.Concrete
@model List<Category>

@{
    ViewBag.Title = "Mvc Bootcamp V.1.1";
    Layout = "~/Views/Shared/_PanelLayout.cshtml";
}



<div class="row mt">
    <div class="col-md-12">
        <div class="content-panel" style="padding:10px 10px 10px 10px;">
            <table class="table table-striped table-advance table-hover table-bordered ">
                <div style="width:100%;background:white;padding:10px 0 10px 0;margin-bottom:5px;border-radius:3px;">
                    <a href="/PanelCategory/Add" class="btn btn-primary" style="float:right;"><i class="fa fa-plus"></i> Yeni Kategori</a>
                    <button class="btn btn-success" style="float:right;margin-right:10px;background:none;color:#383838;border-color:#d3d3d3;"><i class="fa fa-file-pdf-o" style="color:#d9534f;"></i> Pdf</button>
                    <button class="btn btn-success" style=" float: right; margin-right: 10px; background: none; color: #383838;border-color:#d3d3d3;"><i class="fa fa-file-excel-o " style="color:#5cb85c;"></i> Excel</button>
                    <button class="btn btn-success" style="float:right;margin-right:10px;background:none;color:#383838;border-color:#d3d3d3;"><i class="fa fa-print" style="color:black;"></i> Yazdır</button>

                    <div class="clear"></div>
                </div>
                <thead>
                    <tr>
                        <th><input type="checkbox"/></th>
                        <th>Kategori Kodu</th>
                        <th>Kategori Adı</th>
                        <th class="hidden-phone">Açıklama</th>
                        <th>Sıra</th>
                        <th>Başlıklar</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td width="20px"><input type="checkbox"/></td>
                            <th width="120px">@item.Id</th>
                            <td>@item.Name</td>
                            <td class="hidden-phone">@item.Description</td>
                            <td width="50">10</td>
                            <td width="100"><button class="btn btn-primary btn-xs">Başlıklar (20)</button></td>
                            <td align="center" width="100px">
                                @if (item.Status == true)
                                {
                                    <button id="@item.Id" class="btn-active btnStatus">Aktif</button>
                                }
                                else
                                {
                                    <button id="@item.Id" class="btn-passive btnStatus">Pasif</button>
                                }
                            </td>
                            <td align="center" width="120px">
                                <a href="/PanelCategory/Update/@item.Id" class="btn btn-primary btn-xs"><i class="fa fa-edit" style="margin-right:3px;"></i>Düzenle</a>
                                <button class="btn btn-danger btn-xs btnRemove" name="@item.Id"><i class="fa fa-trash-o"></i></button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div><!-- /content-panel -->
    </div><!-- /col-md-12 -->
</div><!-- /row -->

@section SweetAlert{

    <link href="~/Content/css/sweet-alert/sweet-alert.css" rel="stylesheet" />
}

@section OperationScripts{

    <script src="~/Scripts/sweetalert/sweetalert.min.js"></script>
    <script src="~/Scripts/web-operation/web-operation.js"></script>
}