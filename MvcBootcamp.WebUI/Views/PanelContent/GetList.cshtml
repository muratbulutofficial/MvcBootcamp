@using MvcBootcamp.Entities.DTOs
@model List<ContentDetailDto>
@{
    ViewBag.Title = "Mvc Bootcamp V.1.1";
    Layout = "~/Views/Shared/_PanelLayout.cshtml";
}


<div class="row mt">
    <div class="col-md-12">
        <div class="page-content">
            <div class="page-content-header">
                <i class="fa fa-list icon-margin"></i> <span>YAZILAR</span>
            </div>
            <div class="content-panel" style="padding:10px 10px 10px 10px;">
                <table class="table table-striped table-advance table-hover table-bordered ">
                    <div style="width:100%;height:auto;background:white;padding:10px 0 10px 0;margin-bottom:3px;border-radius:3px;">
                        <a href="/PanelContent/Add" class="btn btn-primary" style="float:right;"><i class="fa fa-plus"></i> Yeni İçerik</a>
                        <button class="btn-pdf"><i class="fa fa-file-pdf-o" style="color:#d9534f;"></i> Pdf</button>
                        <button class="btn-excel"><i class="fa fa-file-excel-o " style="color:#5cb85c;"></i> Excel</button>
                        <button class="btn-print"><i class="fa fa-print" style="color:black;"></i> Yazdır</button>

                        <button id="RemoveSelected" class="btn btn-danger" style="float:left;display:none;margin-right:10px;"><i class="fa fa-trash-o icon-margin"></i> Seçilenleri Sil</button>

                        <div class="fast-filter">
                            <input type="text" placeholder="Hızlı Filtreleme" />
                            <button type="submit">Ara</button>
                        </div>

                        <div class="clear"></div>

                    </div>
                    <thead class="table-thead">
                        <tr>
                            <th>#</th>
                            <th>Yazar</th>
                            <th class="hidden-phone">Başlık</th>
                            <th>İçerik</th>
                            <th>Yayınlanma Tarihi</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th>@item.ContentId</th>
                                <td>@item.AuthorName</td>
                                <td>@item.HeadlineName </td>
                                @*<td align="center">
                                    @if (item.Status == true)
                                    {
                                        <button id="@item.Id" class="btn-active">Aktif</button>
                                    }
                                    else
                                    {
                                        <button id="@item.Id" class="btn-passive">Pasif</button>
                                    }
                                </td>*@
                                <td class="hidden-phone">@item.ContentText.Substring(0, 80) ...</td>
                                <td width="140">@item.CreationDate</td>
                                <td align="center" width="190">
                                    <a href="#" class="btn btn-warning btn-xs"><i class="fa fa-copy"></i> Kopyala</a>
                                    <a href="/PanelContent/Update/@item.ContentId" class="btn btn-primary btn-xs"><i class="fa fa-edit" style="margin-right:3px;"></i>Düzenle</a>
                                    <button class="btn btn-danger btn-xs btnRemove" name="@item.ContentId"><i class="fa fa-trash-o"></i></button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div><!-- /content-panel -->
        </div><!-- /page-content -->
        </div><!-- /col-md-12 -->
    </div><!-- /row -->
