@model MvcBootcamp.Entities.Concrete.Headline
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_PanelLayout.cshtml";
}

<div class="row mt">
    <div class="col-md-12">
        <div class="page-content">
            @using (Html.BeginForm("Update", "PanelHeadline", FormMethod.Post))
            {
                <div class="page-content-header">

                    <i class="fa fa-list icon-margin"></i> <span>BAŞLIK GÜNCELLE</span>
                    <button class="btn btn-success btn-xs" style="float:right;margin-top:0;border:1px solid #d3d3d3;"><i class="fa fa-save"></i> Kaydet</button>
                </div>
                <div style="clear:both;"></div>
                <div class="content-panel" style="padding:10px 10px 10px 10px;">

                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        <label>Başlık</label>
                        @Html.TextBoxFor(x => x.Text, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.Text, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label>Kategori Kodu</label>
                        @Html.DropDownListFor(k => k.CategoryId, (List<SelectListItem>)ViewBag.Category, "--Seçiniz--", new { @class = "form-control", @Required = "required" })
                        @Html.ValidationMessageFor(k => k.CategoryId, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label>Seo Url</label>
                        @Html.TextBoxFor(x => x.SeoUrl, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.SeoUrl, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label>Durum</label>
                        @Html.DropDownListFor(x => x.isActive, new List<SelectListItem> {
                             new SelectListItem {
                                Text="Aktif",
                                Value="true",
                               // Selected = true, seçili olarak gelsin
                                // Disabled = true  disable olarak gelsin istersek kullanıyoruz
                             },
                             new SelectListItem {
                                Text="Pasif",
                                Value="false",
                             }}, "--Seçiniz--", new { @class = "form-control", @style = "margin-top:10px;", @Required = "required" })

                    </div>

                </div>
            }
        </div>

    </div>
</div>


