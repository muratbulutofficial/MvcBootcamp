@using MvcBootcamp.Entities.Concrete
@model List<Author>
@{
    ViewBag.Title = "Mvc Bootcamp V.1.1";
    Layout = "~/Views/Shared/_PanelLayout.cshtml";
}

<div class="row mt">
    <div class="col-md-12">
        <div class="page-content">
            <div class="page-content-header">
                <i class="fa fa-list icon-margin"></i> <span>YAZARLAR</span>
            </div>
            <div class="content-panel" style="padding:10px 10px 10px 10px;">
                <table class="table table-striped table-advance table-hover table-bordered ">
                    <div style="width:100%;height:auto;background:white;padding:10px 0 10px 0;margin-bottom:3px;border-radius:3px;">
                        <a href="/PanelContent/Add" class="btn btn-primary" style="float:right;"><i class="fa fa-plus"></i> Yeni Yazar</a>
                        <button class="btn-pdf"><i class="fa fa-file-pdf-o" style="color:#d9534f;"></i> Pdf</button>
                        <button class="btn-excel"><i class="fa fa-file-excel-o " style="color:#5cb85c;"></i> Excel</button>
                        <button class="btn-print"><i class="fa fa-print" style="color:black;"></i> Yazdır</button>

                        <button id="RemoveSelected" class="btn btn-danger" style="float:left;display:none;margin-right:10px;"><i class="fa fa-trash-o icon-margin"></i> Seçilenleri Sil</button>

                        <div class="fast-filter">
                            <input type="text" placeholder="Hızlı Filtreleme" />
                            <button type="submit">Ara</button>
                        </div>

                        <div class="clear"></div>

                    </div>
                    <thead class="table-thead">
                        <tr>
                            <th width="20"><input type="checkbox" /></th>
                            <th>Kullanıcı Adı</th>
                            <th class="hidden-phone" width="100">İp Adresi</th>
                            <th width="100">Kullanıcı Tipi</th>
                            <th width="100">Yazılar</th>
                            <th width="140">Son Giriş Tarihi</th>
                            <th width="140">Kayıt Tarihi</th>
                            <th align="center" width="100px">Durum</th>
                            <th align="center" width="120">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th><input type="checkbox" /></th>
                            <td><img src="~/Content/img/bg-avatar.png" class="img-circle" width="30" /><span style="margin-left:5px;">EgoistPati</span></td>
                            <td>192.564.1.1</td>
                            <td class="hidden-phone">Yazar</td>
                            <td></td>
                            <td >21.10.2020 15:38:48</td>
                            <td >12.05.2020 15:38:48</td>
                            <td></td>
                            <td >
                                <a href="/PanelContent/Update/" class="btn btn-primary btn-xs"><i class="fa fa-edit" style="margin-right:3px;"></i>Düzenle</a>
                                <button class="btn btn-danger btn-xs btnRemove"><i class="fa fa-trash-o"></i></button>
                            </td>
                        </tr>
                        
                    </tbody>
                </table>
            </div><!-- /content-panel -->
        </div><!-- /page-content -->
    </div><!-- /col-md-12 -->
</div><!-- /row -->
