@using MvcBootcamp.Entities.Concrete
@model List<Category>


@{
    Layout = "~/Views/Shared/_Layout.cshtml";

}

    <div style="margin:20px 20px 0 20px;">

        <table class="table table-bordered table-striped table-hover table-responsive">
            <thead style="background:white;font-size:15px;">
                <tr>
                    <th>#</th>
                    <th>KATEGORİ ADI</th>
                    <th>AÇIKLAMA</th>
                    <th>DURUM</th>
                    <th>İŞLEMLER</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th>@item.Id</th>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td align="center">
                            @if (item.IsActive == true)
                            {
                                <button class="btn btn-success" style="width:80%;">Aktif</button>
                            }
                            else
                            {
                                <button class="btn btn-danger" style="width:80%;">Pasif</button>
                            }

                        </td>
                      
                    </tr>

                }
            </tbody>

        </table>

        <a href="/Category/Add" class="btn btn-primary"> New Category</a>

    </div>

