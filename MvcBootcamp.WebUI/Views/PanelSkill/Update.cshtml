@model MvcBootcamp.Entities.Concrete.Skill

@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_PanelLayout.cshtml";
}

<div class="row mt">
    <div class="col-md-12">
        <div class="page-content">
            @using (Html.BeginForm("Update", "PanelSkill", FormMethod.Post))
            {
                <div class="page-content-header">

                    <i class="fa fa-list icon-margin"></i> <span>YETENEK GÜNCELLE</span>
                    <button class="btn btn-success btn-xs" style="float:right;margin-top:0;border:1px solid #d3d3d3;"><i class="fa fa-save"></i> Kaydet</button>
                </div>
                <div style="clear:both;"></div>
                <div class="content-panel" style="padding:10px 10px 10px 10px;">

                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        <label>Başlık</label>
                        @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @Required = "required" })
                        @Html.ValidationMessageFor(x => x.Name, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label>Yüzdelik Kısım</label>
                        @Html.TextBoxFor(x => x.Percent, new { @class = "form-control", @Required = "required" })
                        @Html.ValidationMessageFor(x => x.Percent, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label>Değer</label>
                        @Html.TextBoxFor(x => x.Value, new { @class = "form-control", @Required = "required" })
                        @Html.ValidationMessageFor(x => x.Value, null, new { @class = "text-danger" })
                    </div>
                </div>
            }
        </div>

    </div>
</div>



